driver = mysql
connect = host=127.0.0.1 dbname={{ postfix_db_name }} user={{ postfix_db_user }} password={{ lookup('password', 'roles/postfix/files/credentials/mysql/' + postfix_db_user + ' chars=hexdigits') }}
default_pass_scheme = SHA512-CRYPT
password_query = SELECT email as user, password FROM virtual_users WHERE email='%u';
